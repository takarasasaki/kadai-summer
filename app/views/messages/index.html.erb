<h1>掲示板</h1>

<%= form_for Message.new do |f| %>


  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :body %>
    <%= f.text_field :body %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>

<% @messages.each do |message| %>
  <p><%= message.id %> : <%= message.title %> : <%= message.name %> : <%= message.created_at %></p>
  <p><%= message.body %></p>
  <br>
<% end %>

